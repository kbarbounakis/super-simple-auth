{
  "name": "@themost/super-simple-auth",
  "version": "0.1.0",
  "description": "OAuth2 server based on @themost-framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "start:production": "node bin/www.js",
    "clean": "rimraf dist",
    "build": "rimraf dist && babel src --out-dir dist --copy-files --source-maps",
    "themost": "themost",
    "build:css": "postcss assets/styles/tailwind.css -o assets/styles/style.css",
    "start": "nodemon bin/serve.js",
    "test": "jasmine",
    "debug": "nodemon --inspect-brk bin/serve.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.20.7",
    "@tailwindcss/forms": "^0.5.7",
    "@types/express": "^4.17.15",
    "@types/lodash": "^4.14.191",
    "@types/passport": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.31.0",
    "module-alias": "^2.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@themost/client": "^2.11.0",
    "@themost/common": "^2.10.4",
    "@themost/data": "^2.11.0",
    "@themost/ejs": "^2.0.1",
    "@themost/express": "^1.6.2",
    "@themost/json": "^1.0.1",
    "@themost/jspa": "^1.2.2",
    "@themost/node": "^2.5.0",
    "@themost/query": "^2.11.1",
    "@themost/sqlite": "^2.6.16",
    "@themost/xml": "^2.5.2",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "debug": "~4.3.4",
    "express": "~4.18.2",
    "express-session": "^1.17.3",
    "http-errors": "~2.0.0",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "~1.10.0",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "password-validator": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.57.1",
    "tailwindcss": "^3.3.5"
  },
  "nodemonConfig": {
    "watch": [
      "modules",
      "src",
      "bin",
      "spec",
      "assets/stylesheets/**/*.scss"
    ],
    "verbose": true,
    "legacy-watch": true,
    "delay": "2000",
    "execMap": {
      "js": "node --require ./spec/helpers/babel --require ./spec/helpers/module-alias"
    },
    "env": {
      "PORT": 3000,
      "DEBUG": "app:*,themost-framework:*",
      "NODE_ENV": "development"
    },
    "ext": "ts,js,json"
  }
}
